<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ImageView
        android:id="@+id/iv_aboutus_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:src="@drawable/aboutus_top"/>

    <ImageView
        android:id="@+id/iv_aboutus_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dip"
        android:src="@drawable/aboutus_bottom"/>

    <ScrollView
        android:layout_below="@+id/iv_aboutus_top"
        android:layout_above="@+id/iv_aboutus_bottom"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:padding="10dip"
        android:background="@drawable/blue_whiteborder"
        android:layout_height="match_parent">


        <TextView android:id="@+id/about_text"
            android:paddingTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        </ScrollView>

</RelativeLayout>