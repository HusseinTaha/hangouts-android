<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.comred.hangout.Signup_login"
    android:background="@drawable/background">



    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkBlue_bottom_top">

        <com.comred.Controls.CstmTextView
            android:id="@+id/tv_fragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dip"
            android:textSize="25sp"
            android:layout_marginTop="10dip"
            android:textColor="@color/white"
            android:text="SignUp/SignIn"/>


    </RelativeLayout>

    <ImageView
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="10dip"
        android:id="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>


    <RadioGroup
        android:id="@+id/rg_signOptions"
        android:layout_below="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rb_signup"
        android:orientation="horizontal">

        <com.comred.Controls.CstmRadioButton
            android:id="@+id/rb_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="SignUp"/>
        <com.comred.Controls.CstmRadioButton
            android:id="@+id/rb_signin"
            android:layout_marginLeft="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignIn"/>
        </RadioGroup>


    <ImageView
        android:id="@+id/iv_friendsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/friends_image"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/viewBottom"/>


    <LinearLayout
        android:id="@+id/ll_items"
        android:layout_below="@+id/rg_signOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:layout_width="270dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_country_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.comred.Controls.CstmTextView
                android:id="@+id/tv_countryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dip"
                android:background="@drawable/label_style"
                android:textColor="@color/white"
                android:text="Country"/>

            <com.comred.Controls.Combo
                android:id="@+id/et_countryCode"
                android:paddingLeft="2dip"
                android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_fields"
                android:textColor="@color/DarkBlue_bottom_top"/>

            <com.comred.Controls.CstmTextView
                android:id="@+id/tv_phone"
                android:gravity="center"
                android:padding="1dip"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/label_style"
                android:text="Phone"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_marginTop="2dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/input_fields"
                android:textColor="@color/DarkBlue_bottom_top"
                android:text=""/>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.comred.Controls.CstmTextView
                android:id="@+id/tv_name"
                android:gravity="center"
                android:padding="1dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/label_style"
                android:text="Name"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_marginTop="2dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkBlue_bottom_top"
                android:background="@drawable/input_fields"
                android:text=""/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.comred.Controls.CstmTextView
                android:id="@+id/tv_email"
                android:gravity="center"
                android:padding="1dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/label_style"
                android:text="Email"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_marginTop="2dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkBlue_bottom_top"
                android:background="@drawable/input_fields"
                android:inputType="textEmailAddress"
                android:text=""/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.comred.Controls.CstmTextView
                android:id="@+id/tv_password"
                android:gravity="center"
                android:padding="1dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/label_style"
                android:text="Passwd"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_marginTop="2dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkBlue_bottom_top"
                android:background="@drawable/input_fields"
                android:inputType="textPassword"
                android:text=""/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_marginTop="10dip"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:background="@drawable/button_image"
            android:text="Sign Up"
            android:textColor="@color/white"/>

    </LinearLayout>




    <View
        android:id="@+id/viewBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/DarkBlue_bottom_top"/>
</RelativeLayout>
