<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.comred.Fragments.CalendarFragment"
    android:background="@color/DarkBlue_bottom_top">

    <View
        android:id="@+id/v_topseparator"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/blue_app"/>



    <RelativeLayout
        android:id="@+id/rl_calendarLayout"
        android:layout_below="@+id/v_topseparator"
        android:layout_above="@+id/v_bottomseparator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_header"
            android:padding="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_previous"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:src="@drawable/left_arrow"/>

            <LinearLayout
                android:id="@+id/ll_year_month"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.comred.Controls.CstmTextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text=""/>

                <com.comred.Controls.CstmTextView
                    android:id="@+id/tv_year"
                    android:layout_marginTop="5dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text=""/>

                </LinearLayout>

            <ImageView
                android:id="@+id/iv_next"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@drawable/right_arrow"/>

            </RelativeLayout>



        <GridView
            android:id="@+id/gv_days"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:listSelector="@android:color/transparent"
            android:background="#FBFBFB"
            android:numColumns="7"
            android:layout_below="@+id/rl_header"
            android:stretchMode="columnWidth" />

        <GridView
            android:id="@+id/gv_calendar"
            android:layout_marginTop="10dip"
            android:layout_below="@id/gv_days"
            android:layout_width="match_parent"
            android:layout_height="350dip"
            android:layout_gravity="center_horizontal"
            android:listSelector="@android:color/transparent"
            android:numColumns="7"
            android:stretchMode="columnWidth" />



    </RelativeLayout>



    <com.comred.Controls.Events_ShareCtrl
        android:visibility="invisible"
        android:layout_margin="10dip"
        android:id="@+id/esc_eventControl"
        android:layout_above="@id/v_bottomseparator"
        android:layout_width="match_parent"
        android:layout_height="150dip"/>


    <View
        android:id="@+id/v_bottomseparator"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/blue_app"/>


</RelativeLayout>
