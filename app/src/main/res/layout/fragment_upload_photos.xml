
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dip">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.comred.Fragments.UploadPhotosFragment"
    android:layout_marginBottom="40dip">


    <ImageView
        android:layout_marginTop="10dip"
        android:id="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/upload_image_top"/>




    <LinearLayout
        android:id="@+id/ll_photoLayout"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:padding="2dip"
        android:layout_below="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_border"
            />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_btns"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/ll_photoLayout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.comred.Controls.CstmTouchButton
            android:id="@+id/btn_select"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@color/white"
            android:background="@drawable/button_image"
            />

        <Button
            android:id="@+id/btn_upload"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/uploadbtn"
            android:enabled="false"
            />
        </LinearLayout>


</RelativeLayout>
</ScrollView>