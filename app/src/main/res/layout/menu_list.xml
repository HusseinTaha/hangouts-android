<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <View
        android:layout_width="10dip"
        android:layout_height="match_parent"
        android:background="@color/DarkBlue_bottom_top"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_menu_aboutus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/menu_padding"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="@dimen/menu_bottom_margin"
            android:src="@drawable/aboutus_dark"/>
        <TextView
            android:id="@+id/tv_menu_aboutus"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:layout_marginLeft="28dip"
            android:textColor="@color/DarkBlue_bottom_top"
            android:textSize="@dimen/menu_text_size"
            android:text="About Us"/>

        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/menu_line_margin"
        android:layout_marginRight="@dimen/menu_line_margin"

        android:background="@color/Gray"/>

        <!--android:layout_marginTop="@dimen/menu_line_pad"
        android:layout_marginBottom="@dimen/menu_line_pad"-->

    <LinearLayout
        android:id="@+id/ll_menu_myschedule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/menu_padding"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_myschedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="@dimen/menu_bottom_margin"
            android:src="@drawable/schedule_dark"/>
        <TextView
            android:id="@+id/tv_menu_myschedule"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:layout_marginLeft="32dip"
            android:textColor="@color/DarkBlue_bottom_top"
            android:textSize="@dimen/menu_text_size"
            android:text="My Schedule"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/menu_line_margin"
        android:layout_marginRight="@dimen/menu_line_margin"

        android:background="@color/Gray"/>

    <LinearLayout
        android:id="@+id/ll_menu_friendsSchedule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/menu_padding"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_friendsSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dip"
            android:layout_marginBottom="@dimen/menu_bottom_margin"
            android:src="@drawable/contacts_dark"/>
        <TextView
            android:id="@+id/tv_menu_friendsSchedule"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:layout_marginLeft="35dip"
            android:textColor="@color/DarkBlue_bottom_top"
            android:textSize="@dimen/menu_text_size"
            android:text="Friends Schedule"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/menu_line_margin"
        android:layout_marginRight="@dimen/menu_line_margin"

        android:background="@color/Gray"/>

    <LinearLayout
        android:id="@+id/ll_menu_uploadPhotos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/menu_padding"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_uploadPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginBottom="@dimen/menu_bottom_margin"
            android:src="@drawable/upload_dark"/>
        <TextView
            android:id="@+id/tv_menu_uploadPhotos"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:layout_marginLeft="15dip"
            android:textColor="@color/DarkBlue_bottom_top"
            android:textSize="@dimen/menu_text_size"
            android:text="Upload Photos"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/menu_line_margin"
        android:layout_marginRight="@dimen/menu_line_margin"

        android:background="@color/Gray"/>

    <LinearLayout
        android:id="@+id/ll_menu_photoWall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/menu_padding"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_photoWall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_marginBottom="@dimen/menu_bottom_margin"
            android:src="@drawable/photowall_dark"/>
        <TextView
            android:id="@+id/tv_menu_photoWall"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:layout_marginLeft="18dip"
            android:textColor="@color/DarkBlue_bottom_top"
            android:textSize="@dimen/menu_text_size"
            android:text="Photo Wall"/>

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/menu_line_margin"
        android:layout_marginRight="@dimen/menu_line_margin"

        android:background="@color/Gray"/>

    <LinearLayout
        android:id="@+id/ll_menu_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/menu_padding"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="@dimen/menu_bottom_margin"
            android:src="@drawable/settings_dark"/>
        <TextView
            android:id="@+id/tv_menu_settings"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:layout_marginLeft="22dip"
            android:textColor="@color/DarkBlue_bottom_top"
            android:textSize="@dimen/menu_text_size"
            android:text="Settings"/>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>