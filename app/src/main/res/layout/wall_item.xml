<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wall_border"
        android:padding="13dip">


        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test"/>



        <RelativeLayout
            android:id="@+id/rl_topName"
            android:layout_alignTop="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:background="@drawable/transpview"
            >
            <com.comred.Controls.CstmTextView
               android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Name"/>
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl_bottomDate"
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/iv_photo"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/transpview"
            >
            <com.comred.Controls.CstmTextView
                android:gravity="right"
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24,24,2012 323454"/>
        </RelativeLayout>




    </RelativeLayout>





</RelativeLayout>
